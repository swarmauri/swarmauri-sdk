{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Peagen Result",
  "type": "object",
  "required": ["task_id", "status", "data", "created_at", "attempts"],
  "properties": {
    "task_id": {"type": "string"},
    "status": {"type": "string", "enum": ["ok", "error", "skip"]},
    "data": {"type": "object"},
    "created_at": {"type": "string", "format": "date-time"},
    "attempts": {"type": "integer", "minimum": 1}
  }
}
